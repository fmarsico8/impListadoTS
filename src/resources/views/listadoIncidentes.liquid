<br>
<br>
<div class="container">
    <table id="example" class="table table-striped table-bordered tabla" style="padding-top: 10px">
        <br>
        <thead>
            <tr class="tabla" style="margin-left: 10px;margin-right: 10px">
                <th style="padding-right: 30px;background-color: #078FC9; ">Servicio</th>
                <th style="padding-right: 30px;background-color: #078FC9; ">Tipo de Servicio</th>
                <th style="padding-right: 30px;background-color: #078FC9; ">Descripción</th>
                <th style="padding-right: 30px;background-color: #078FC9; ">Fecha apertura</th>
                <th style="padding-right: 30px;background-color: #078FC9; ">Estado</th>
            </tr>
        </thead>
        <tbody>
            {% for servicio in servicios %}
                {% for incidente in servicio.incidentes %}
                    <tr>
                        <td style="padding-right: 30px;">{{ servicio.nombre}}</td>
                        <td style="padding-right: 30px;">{{ servicio.tipoServicio.nombre}}</td>
                        <td style="padding-right: 30px;">{{ incidente.descripcion}}</td>
                        <td style="padding-right: 30px;">{{ incidente.fechaApertura}}</td>
                        {% if incidente.estado == "ABIERTO" %}
                        <td style="padding-right: 30px;background-color: green;color: white;;">{{ incidente.estado}}</td>
                        {% else %}
                        <td style="padding-right: 30px;background-color: darkred;color: white;;">{{ incidente.estado}}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>

